      "package-name": "LibFirewall",
      "component": "LibFirewall",
      "include-component-in-tag": false,
      "pull-request-title-pattern": "chore: release ${component} ${version}",
      "extra-files": [
        {
          "type": "xml",
          "path": "LibFirewall.csproj",
          "xpath": "//Project/PropertyGroup/Version"
